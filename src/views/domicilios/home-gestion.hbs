<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <!-- Menú -->
    {{> menu-gestion}}

    {{!-- <div class="content-area"> --}}
    <section class="section">
      <div class="container">
        <h1 class="title">Dashboard de Gestión</h1>

        <!-- Tarjetas de resumen -->
        <div class="columns">
          <div class="column">
            <div class="box has-background-primary-95"> 
              <article class="media">
                <div class="media-left">
                  <span class="icon is-large has-text-danger">
                    <i class="fas fa-clock fa-2x"></i>
                  </span>
                </div>
                <div class="media-content">
                  <div class="content">
                    <p>
                      <strong id="solicitudes-pendientes" class="is-size-4">0</strong>
                      <br />
                      <span>Solicitudes pendientes</span>
                    </p>
                  </div>
                </div>
              </article>
            </div>
          </div>

          <div class="column">
            <div class="box has-background-primary-95"> 
              <article class="media">
                <div class="media-left">
                  <span class="icon is-large has-text-warning">
                    <i class="fas fa-motorcycle fa-2x"></i>
                  </span>
                </div>
                <div class="media-content">
                  <div class="content">
                    <p>
                      <strong id="solicitudes-en-proceso" class="is-size-4">0</strong>
                      <br />
                      <span>En proceso</span>
                    </p>
                  </div>
                </div>
              </article>
            </div>
          </div>

          <div class="column">
            <div class="box has-background-primary-90"> 
              <article class="media">
                <div class="media-left">
                  <span class="icon is-large has-text-success">
                    <i class="fas fa-check-circle fa-2x"></i>
                  </span>
                </div>
                <div class="media-content">
                  <div class="content">
                    <p>
                      <strong id="solicitudes-completadas-hoy" class="is-size-4">0</strong>
                      <br />
                      <span>Completadas hoy</span>
                    </p>
                  </div>
                </div>
              </article>
            </div>
          </div>
        </div>

        <!-- Panel de solicitudes recientes -->
        <div class="box">
          <div class="level">
            <div class="level-left">
              <div class="level-item">
                <h3 class="title is-5">Solicitudes recientes</h3>
              </div>
            </div>
            <!-- Elemento para buscar alineado a la derecha -->
            <div class="level-right">
              <div class="level-item">
                <div class="field has-addons">
                  <div class="control">
                    <input class="input" type="text" placeholder="Buscar solicitud"/>
                  </div>
                  <div class="control">
                    <a class="button is-primary">
                      <span class="icon">
                        <i class="fas fa-search"></i>
                      </span>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="table-container">
            <table class="table is-fullwidth is-hoverable">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Solicitante</th>
                  <th>Destinatario</th>
                  <th>Dirección</th>
                  <th>Estado</th>
                  <th>Acción</th>
                </tr>
              </thead>
              <tbody id="solicitudes-recientes-table">
                <tr>
                  <td>1234</td>
                  <td>LAURA GUTIERREZ SANDOVAL</td>
                  <td>CACHARRERIA MIL HERRAJES</td>
                  <td>Cl 45 #28-13, Bucarica</td>
                  <td>
                    <span class="tag is-danger">SOLICITADO</span>
                  </td>
                  <td class="has-text-centered">
                    <div class="buttons are-small">
                      <button class="button is-info is-small">
                        <span class="icon"><i class="fas fa-eye"></i></span>
                      </button>
                    </div>
                  </td>
                </tr>

              </tbody>
            </table>
          </div>

          <div class="has-text-centered mt-4">
            <a href="/gestion/lista-gestion" class="button is-primary is-light">
              Ver todas las solicitudes
            </a>
          </div>
        </div>
      </div>
    </section>
    <script>
      const userId = {{{jsonify userId}}}; // ID del usuario autenticado
      const origin = "{{origin}}";
    </script>
    <script type="module" src="/js/home-gestion.js"></script>
  </body>
</html>

