<!-- src/views/domicilios/inicio-solicitante.hbs -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Inicio - Solicitante</title>
</head>
<body>
  <!-- Menú -->
  {{> menu-solic }}

  <!-- Contenido Principal -->
  <section class="section">
    <div class="container">
      <h1 class="title">¡Hola, {{user.username}}!</h1>

      <!-- Resumen de Solicitudes -->
      <div class="columns">
        <!-- Solicitudes Activas -->
        <div class="column">
          <div class="box has-background-primary-95"> 
            <article class="media">
              <div class="media-left">
                <span class="icon is-large has-text-danger">
                  <i class="fas fa-clock fa-2x"></i>
                </span>
              </div>
              <div class="media-content">
                <div class="content">
                  <p>
                    <strong id="solicitudes-activas" class="is-size-4">0</strong>
                    <br />
                    <span>Solicitudes activas</span>
                  </p>
                </div>
              </div>
            </article>
          </div>
          <div class="card">
            <header class="card-header">
              <p class="card-header-title">Solicitudes Activas</p>
            </header>
            <div class="card-content">
              <table class="table is-hoverable">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Destinatario</th>
                    <th>Estado</th>
                    <th>Detalle</th>
                  </tr>
                </thead>
                <tbody id="solicitudes-activas-table">

                </tbody>
              </table>
            </div>
          </div>
        </div>

        <!-- Últimas Solicitudes Completadas -->
        <div class="column">
          <div class="box has-background-primary-90"> 
            <article class="media">
              <div class="media-left">
                <span class="icon is-large has-text-success">
                  <i class="fas fa-check-circle fa-2x"></i>
                </span>
              </div>
              <div class="media-content">
                <div class="content">
                  <p>
                    <strong id="solicitudes-completadas-hoy" class="is-size-4">0</strong>
                    <br />
                    <span>Completadas hoy</span>
                  </p>
                </div>
              </div>
            </article>
          </div>
          <div class="card">
            <header class="card-header">
              <p class="card-header-title">Últimas Solicitudes Completadas</p>
            </header>
            <div class="card-content">
              <table class="table is-hoverable">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Destinatario</th>
                    <th>Fecha de Entrega</th>
                    <th>Detalle</th>
                  </tr>
                </thead>
                <tbody id="solicitudes-completadas-table">

                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

      <!-- Botón Destacado -->
      <div class="has-text-centered">
        <a href="/solicitudes/form-solicitudes?origin={{origin}}" class="button is-primary is-large">Solicitar Domicilio</a>
      </div>
    </div>
  </section>
  <script>
    const userId = {{{jsonify user.id}}}; // ID del usuario autenticado
    const origin = "{{origin}}";
  </script>
  <script type="module" src="/js/home-solicitudes.js"></script>
</body>
</html>