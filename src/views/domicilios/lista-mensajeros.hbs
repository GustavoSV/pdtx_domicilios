<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mensajeros</title>
</head>
<body>
  <!-- Menú -->
  {{> menu-gestion }}

  <section class="section">
    <div class="container">
      <h1 class="title">Mensajeros</h1>
      <div class="box">
        <!-- Búsqueda de mensajeros -->
        <div class="level-right mb-4">
          <div class="level-item">
            <div class="field has-addons">
              <div class="control">
                <input id="search-input" class="input" type="text" placeholder="Buscar mensajero"/>
              </div>
              <div class="control">
                <a id="search-button" class="button is-primary">
                  <span class="icon">
                    <i class="fas fa-search"></i>
                  </span>
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Tabla de Mensajeros -->
        <table class="table is-hoverable is-fullwidth">
          <thead>
            <tr>
              <th>ID</th>
              <th>Código</th>
              <th>Nombre</th>
              <th>Dirección</th>
              <th>Teléfono</th>
              <th>Email</th>
              <th>Acciones</th>
              <th></th>
            </tr>
          </thead>
          <tbody id="mensajeros-table-body">
            <!-- Las filas se cargarán dinámicamente -->
          </tbody>
        </table>
      </div>

      <!-- Paginación -->
      <nav class="pagination is-centered" role="navigation" aria-label="pagination">
        <a id="prev-page" class="pagination-previous">Página Anterior</a>
        <a id="next-page" class="pagination-next">Página Siguiente</a>
        <span id="pagination-info" class="pagination-info"></span>
      </nav>
    </div>

    <!-- Botón Destacado -->
    <div class="has-text-centered">
      <a href="/mensajeros/form-mensajeros" class="button is-primary is-large mt-4">Nuevo Mensajero</a>
    </div>
  </section>

  <script type="module" src="/js/lista-mensajeros.js"></script>
</body>
</html>